<?xml version="1.0" encoding="utf-8" ?>
<openerp>
<data>
<template id="report_payrslip_view">
<t t-call="report.html_container">
<t t-foreach="docs" t-as="o">
			
<div class="page">
<div class="row">  
 <table style="width:100%;">
            <tr>

              <td class="text-left" style="width:60%;">            
                  <strong>Empleado: </strong><span t-field="o.employee_id.name"/>                 
              </td>

              <td class="text-left" style="width:20%;">
                <strong>ID: </strong>
              </td>

              <td class="text-left" style="width:20%;">
              </td>

            </tr>
            <tr>
              
              <td class="text-left" style="width:60%;">
                  <strong>Departamento: </strong><span t-field="o.employee_id.department_id.name"/>
              </td>
              <td class="text-left" style="width:20%;">            
                  <strong>Desde: </strong><span t-field="o.start_date"/>                 
              </td>
              <td class="text-left" style="width:20%;">
              </td>

            </tr>
            <tr>
              <td class="text-left" style="width:60%;">
                <strong>Puesto: </strong><span t-field="o.employee_id.job_id.name"/>
              </td>
              <td class="text-left" style="width:20%;">            
                  <strong>Hasta: </strong><span t-field="o.end_date"/>                 
              </td>
              <td class="text-left" style="width:20%;">              
              </td>

            </tr>            

          </table>
</div>
</div>					
</t>
</t>
</template>
</data>
</openerp>
