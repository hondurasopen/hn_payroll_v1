<?xml version="1.0" encoding="utf-8" ?>
<openerp>
<data>
<template id="report_payrslip_view">
<t t-call="report.html_container">
<t t-foreach="docs" t-as="o">
			
<div class="page">
<div class="row">  
 <table style="width:100%;">
      <tr>
        <td class="text-left" style="width:60%;">            
            <strong>Empleado: </strong><span t-field="o.employee_id.name"/>                 
        </td>
        <td class="text-left" style="width:20%;">
        </td>
        <td class="text-left" style="width:20%;">
        </td>
      </tr>
      <tr>
        <td class="text-left" style="width:60%;">
           <strong>Desde: </strong><span t-field="o.start_date"/>    
        </td>
        <td class="text-left" style="width:20%;">            
                   <strong>Hasta: </strong><span t-field="o.end_date"/>        
        </td>
        <td class="text-left" style="width:20%;">
        </td>
      </tr>
</table>
</div>
<div class="row">
    <table style="width:100%;">
      <tr>
        <td style="width:50%;" align="center">
          <h5><strong>INGRESOS </strong></h5>
        </td>
        <td style="width:50%;" align="center">
          <h5><strong>DEDUCCIONES </strong></h5>
        </td>
      </tr>
  </table>
  <table style="width:100%;">
      <tr>              
        <td style="width:30%;" align="left">             
            <p>Sueldo Base: <span t-field="o.wage"/>  </p>              
        </td>
        <td style="width:20%;" align="left">
        </td>
        
        <td style="width:20%;" align="left">             
            <p>IHSS: <span t-field="o.amount_ihss"/></p>              
        </td>
        <td style="width:20%;" align="left">
        </td>
                     
      </tr>
    </table>

      <table style="width:100%;">
            <tr>              
              <td style="width:30%;" align="center">             
                  <p>Total Ingresos: </p>              
              </td>
              <td style="width:20%;" align="left">
                  <strong><span t-field="l.amount_net"/></strong></p>
              </td>
              
              <td style="width:30%;" align="center">             
                  <p>Total Deducciones: </p>              
              </td>
              <td style="width:20%;" align="left">
                   <strong><span t-field="l.amount_deduction"/></strong>
              </td>
                           
            </tr>
      </table>

    <table style="width:100%;">
    <tr>
      <td class="text-center" style="width:100%;"><br/></td>          
    </tr>
    </table>
    <br/>
    <br/>
    <table style="width:100%;">
        <tr>
          <td class="text-center" style="width:100%;"><strong>Recibi conforme:_______________________________________</strong> </td>          
        </tr>
    </table>   
</div>

</div>					
</t>
</t>
</template>
</data>
</openerp>
