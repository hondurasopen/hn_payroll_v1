<?xml version="1.0" encoding="utf-8" ?>
<openerp>
<data>
<template id="report_payroll_view">
<t t-call="report.html_container">			
<t t-foreach="docs" t-as="o">
    <div class="header">
      <h2 class="text-center" style="font-weight:bold;">
        <span t-field="user.company_id.name"/>
      </h2>
      <h4 class="text-center"><strong>Nómina</strong></h4>
    </div>   

    <div class="footer">
      <div class="col-xs-12">
          <div style="border-bottom: 1px solid black;"></div>
      </div>
      <div class="row text-center">
        <ul class="list-inline">
            <li>Página:</li>
            <li><span class="page"/></li>
            <li>/</li>
            <li><span class="topage"/></li>
        </ul>
      </div>
    </div>

					
<div class="page">

<table class="table table-condensed" style="width:100%;font-size:12px;">
  <thead style="background:gray;color:#FFFFFF;">
      <tr style="font-size:12px;">
      <th class="text-center" style="width:15%;"><strong>Empleado</strong></th>
      <th class="text-center" style="width:10%;"><strong>Salario</strong></th>
      <th class="text-center" style="width:10%;"><strong>IHSS</strong></th>
      <th class="text-center" style="width:10%;"><strong>Préstamo</strong></th>
      <th class="text-center" style="width:15%;"><strong>Aporte Cooperativa</strong></th>
      <th class="text-center" style="width:10%;"><strong>ISR</strong></th>
      <th class="text-center" style="width:15%;"><strong>Total deducciones</strong></th>
      <th class="text-center" style="width:15%;"><strong>Salario Neto</strong></th>
      </tr>
  </thead>
  <tbody>
    <tr t-foreach="o.employee_detail_ids" t-as="l">
        <td class="text-left" style="width:20%;;border:1px solid black;">
            <span t-field="l.employee_id.name"/>
        </td>
        <td class="text-center" style="width:10%;;border:1px solid black;">
            <span t-field="l.wage"/>
        </td>
        <td class="text-center" style="width:10%;;border:1px solid black;">
            <span t-field="l.loan_fee"/>
        </td>
        <td class="text-center" style="width:10%;;border:1px solid black;">
            <span t-field="l.saving_fee"/>
        </td>
        <td class="text-center" style="width:10%;;border:1px solid black;">
            <span t-field="l.amount_isr"/>
        </td>
        <td class="text-center" style="width:10%;;border:1px solid black;">
            <span t-field="l.other_deductions"/>
        </td>
        <td class="text-center" style="width:15%;;border:1px solid black;">
            <span t-field="l.amount_deduction"/>
        </td>
        <td class="text-center" style="width:15%;;border:1px solid black;">
            <span t-field="l.amount_net"/>
        </td>
    </tr>
  </tbody>
</table>					
</div>
					
				</t>
			</t>
	

		</template>
	</data>
</openerp>
